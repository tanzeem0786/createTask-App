<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./public/stylesheet/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>backend project</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-600 " type="text"
                    placeholder="Title goes Here" name="title">
                <textarea class="block h-30 w-full text-2xl rounded-md outline-none mt-3 px-5 py-2 resize-none bg-zinc-600 "
                    placeholder="Write Your Task Details" name="detail"></textarea>
                <input class="p-1 mt-2 bg-blue-600 rounded-md w-30" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap mt-8 ml-10 ">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task    min-w-1 px-3 py-4 rounded-md bg-zinc-700 ">
                        <div class="task  flex justify-between">
                            <h1 class="text-white text-3xl tracking-tighter"> <%= val %></h1>
                            <a class="ml-10" href="/delete/<%=val %>">
                                <img class="h-8" src="https://cdn-icons-png.flaticon.com/128/10336/10336378.png" >  
                                 <!-- <img src=".public/images/delete.png" alt=" "> -->
                            </a>
                        </div>
                       
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 " href="/file/<%=val %>">Read More.</a>
                            <a  class="text-zinc-300 ml-10" href="/edit/<%= val %>" >Edit Filename</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h1 class="ml-1 text-zinc-500">No Task Yet.</h1>
                            <% } %>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
    <!-- <script src="index.js"></script> -->
</body>

</html>